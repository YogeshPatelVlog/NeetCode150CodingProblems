class Solution {
    private static int perfectSquare(int n){
        int sum = 0;
        while(n > 0){
            int rem = n % 10;
            sum += rem * rem ;
            n = n / 10;
        }
        return sum;
    }
    public boolean isHappy(int n) {
        Set<Integer> set = new HashSet<>();;
        while(n!=1 && !set.contains(n)){
            set.add(n);
            n = perfectSquare(n);
        }
        return n == 1;
    }
}
